{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "src",
    "skipLibCheck": true,
    "composite": true,
    "types": ["node"],
    "resolveJsonModule": true,
    "baseUrl": "./",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
}
